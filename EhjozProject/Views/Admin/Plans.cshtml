@model EhjozProject.Web.ViewModels.Admin.SubscriptionPlanManagementViewModel
@{
    ViewData["Title"] = "Subscription Plans Management";
}

<div class="admin-shell">
    <div class="admin-topbar">
        <div>
            <h1 class="admin-title">Subscription Plans</h1>
            <p class="admin-subtitle">Accept or deactivate plans</p>
        </div>
        <a asp-action="Dashboard" class="btn btn-outline-secondary">Back</a>
    </div>

    @await Html.PartialAsync("_AdminNav")

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="admin-card card mb-3">
        <div class="card-header">Create New Plan</div>
        <div class="card-body">
            <form asp-action="CreatePlan" method="post" class="row g-3">
                @Html.AntiForgeryToken()

                <div class="col-md-4">
                    <label class="form-label">Name</label>
                    <input class="form-control" asp-for="CreatePlan.Name" />
                </div>
                <div class="col-md-4">
                    <label class="form-label">Price</label>
                    <input class="form-control" asp-for="CreatePlan.Price" type="number" step="0.01" />
                </div>
                <div class="col-md-4">
                    <label class="form-label">Duration (days)</label>
                    <input class="form-control" asp-for="CreatePlan.DurationDays" type="number" />
                </div>
                <div class="col-md-8">
                    <label class="form-label">Description</label>
                    <input class="form-control" asp-for="CreatePlan.Description" />
                </div>
                <div class="col-md-4">
                    <label class="form-label">Max Stadiums</label>
                    <input class="form-control" asp-for="CreatePlan.MaxStadiums" type="number" />
                </div>

                <div class="col-12 d-flex align-items-center justify-content-between">
                    <div class="form-check">
                        <input class="form-check-input" asp-for="CreatePlan.IsActive" />
                        <label class="form-check-label">Active</label>
                    </div>
                    <button class="btn btn-success">Create Plan</button>
                </div>
            </form>
        </div>
    </div>

    @if (Model.Plans.Any())
    {
        <div class="admin-card card">
            <div class="card-header">All Plans</div>
            <div class="card-body p-0">
            <table class="table admin-table table-hover mb-0">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Price</th>
                        <th>Duration (Days)</th>
                        <th>Max Stadiums</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var plan in Model.Plans)
                    {
                        <tr>
                            <td>@plan.Name</td>
                            <td>@(plan.Description ?? "-")</td>
                            <td>$@plan.Price</td>
                            <td>@plan.DurationDays</td>
                            <td>@plan.MaxStadiums</td>
                            <td>
                                @if (plan.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </td>
                            <td>
                                @if (!plan.IsActive)
                                {
                                    <form asp-action="AcceptPlan" method="post" style="display:inline;">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@plan.Id" />
                                        <button type="submit" class="btn btn-sm btn-success">Accept</button>
                                    </form>
                                }
                                else
                                {
                                    <form asp-action="DeactivatePlan" method="post" style="display:inline;">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@plan.Id" />
                                        <button type="submit" class="btn btn-sm btn-danger">Deactivate</button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">No subscription plans found.</div>
    }
</div>


