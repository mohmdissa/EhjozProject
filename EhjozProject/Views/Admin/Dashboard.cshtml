@model EhjozProject.Web.ViewModels.Admin.AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="admin-shell">
    <div class="admin-topbar">
        <div>
            <h1 class="admin-title">Admin Dashboard</h1>
            <p class="admin-subtitle">Manage users, owners, stadiums, bookings, and subscriptions</p>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="Owners" class="btn btn-success">Pending Owners (@Model.PendingOwnerApprovals)</a>
            <a asp-action="Bookings" class="btn btn-outline-secondary">View Bookings</a>
        </div>
    </div>

    @await Html.PartialAsync("_AdminNav")

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="admin-kpis">
        <div class="admin-kpi">
            <div class="admin-kpi-icon">
                <span class="fw-bold">U</span>
            </div>
            <div>
                <p class="admin-kpi-value">@Model.TotalUsers</p>
                <p class="admin-kpi-label">Total Users</p>
            </div>
        </div>

        <div class="admin-kpi">
            <div class="admin-kpi-icon">
                <span class="fw-bold">O</span>
            </div>
            <div>
                <p class="admin-kpi-value">@Model.TotalOwners</p>
                <p class="admin-kpi-label">Owners</p>
            </div>
        </div>

        <div class="admin-kpi">
            <div class="admin-kpi-icon">
                <span class="fw-bold">P</span>
            </div>
            <div>
                <p class="admin-kpi-value">@Model.PendingOwnerApprovals</p>
                <p class="admin-kpi-label">Pending Approvals</p>
            </div>
        </div>

        <div class="admin-kpi">
            <div class="admin-kpi-icon">
                <span class="fw-bold">S</span>
            </div>
            <div>
                <p class="admin-kpi-value">@Model.TotalStadiums</p>
                <p class="admin-kpi-label">Stadiums</p>
            </div>
        </div>

        <div class="admin-kpi">
            <div class="admin-kpi-icon">
                <span class="fw-bold">B</span>
            </div>
            <div>
                <p class="admin-kpi-value">@Model.TotalBookings</p>
                <p class="admin-kpi-label">Bookings</p>
            </div>
        </div>

        <div class="admin-kpi">
            <div class="admin-kpi-icon">
                <span class="fw-bold">Sub</span>
            </div>
            <div>
                <p class="admin-kpi-value">@Model.TotalSubscriptions</p>
                <p class="admin-kpi-label">Subscriptions</p>
            </div>
        </div>
    </div>

    <div class="admin-card card mb-3">
        <div class="card-header d-flex align-items-center justify-content-between">
            <span>Quick Actions</span>
            <span class="text-muted fw-normal">Jump to management screens</span>
        </div>
        <div class="card-body">
            <div class="admin-actions-grid">
                <a asp-action="Users" class="admin-action">
                    <p class="admin-action-title">Users</p>
                    <p class="admin-action-subtitle">View all customers</p>
                </a>
                <a asp-action="Owners" class="admin-action">
                    <p class="admin-action-title">Owners</p>
                    <p class="admin-action-subtitle">Approve / reject owners</p>
                </a>
                <a asp-action="Stadiums" class="admin-action">
                    <p class="admin-action-title">Stadiums</p>
                    <p class="admin-action-subtitle">Activate / deactivate stadiums</p>
                </a>
                <a asp-action="Bookings" class="admin-action">
                    <p class="admin-action-title">Bookings</p>
                    <p class="admin-action-subtitle">View all bookings</p>
                </a>
                <a asp-action="Plans" class="admin-action">
                    <p class="admin-action-title">Subscription Plans</p>
                    <p class="admin-action-subtitle">Accept / deactivate plans</p>
                </a>
                <a asp-action="Subscriptions" class="admin-action">
                    <p class="admin-action-title">Subscriptions</p>
                    <p class="admin-action-subtitle">View active subscriptions</p>
                </a>
            </div>
        </div>
    </div>
</div>


