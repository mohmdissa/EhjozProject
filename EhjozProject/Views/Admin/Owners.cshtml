@model EhjozProject.Web.ViewModels.Admin.OwnerManagementViewModel
@{
    ViewData["Title"] = "Owners Management";
}

<div class="admin-shell">
    <div class="admin-topbar">
        <div>
            <h1 class="admin-title">Owners</h1>
            <p class="admin-subtitle">Approve, reject, and review owner accounts</p>
        </div>
        <a asp-action="Dashboard" class="btn btn-outline-secondary">Back</a>
    </div>

    @await Html.PartialAsync("_AdminNav")

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Owners.Any())
    {
        <div class="admin-card card">
            <div class="card-header">All Owners</div>
            <div class="card-body p-0">
            <table class="table admin-table table-hover mb-0">
                <thead>
                    <tr>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>City</th>
                        <th>Status</th>
                        <th>Subscription End</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var owner in Model.Owners)
                    {
                        <tr>
                            <td>@owner.FullName</td>
                            <td>@owner.Email</td>
                            <td>@owner.PhoneNumber</td>
                            <td>@owner.City</td>
                            <td>
                                @if (owner.IsApproved)
                                {
                                    <span class="badge bg-success">Approved</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning">Pending</span>
                                }
                            </td>
                            <td>@(owner.SubscriptionEndDate?.ToString("yyyy-MM-dd") ?? "N/A")</td>
                            <td>
                                @if (!owner.IsApproved)
                                {
                                    <form asp-action="ApproveOwner" method="post" style="display:inline;">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@owner.Id" />
                                        <button type="submit" class="btn btn-sm btn-success">Approve</button>
                                    </form>
                                }
                                else
                                {
                                    <form asp-action="RejectOwner" method="post" style="display:inline;">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@owner.Id" />
                                        <button type="submit" class="btn btn-sm btn-danger">Reject</button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">No owners found.</div>
    }
</div>


