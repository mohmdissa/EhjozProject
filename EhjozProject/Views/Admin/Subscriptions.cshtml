@model EhjozProject.Web.ViewModels.Admin.SubscriptionManagementViewModel
@{
    ViewData["Title"] = "Subscriptions Management";
}

<div class="admin-shell">
    <div class="admin-topbar">
        <div>
            <h1 class="admin-title">Subscriptions</h1>
            <p class="admin-subtitle">View all subscriptions</p>
        </div>
        <a asp-action="Dashboard" class="btn btn-outline-secondary">Back</a>
    </div>

    @await Html.PartialAsync("_AdminNav")

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Subscriptions.Any())
    {
        <div class="admin-card card">
            <div class="card-header">All Subscriptions</div>
            <div class="card-body p-0">
            <table class="table admin-table table-hover mb-0">
                <thead>
                    <tr>
                        <th>Owner</th>
                        <th>Plan</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var subscription in Model.Subscriptions.OrderByDescending(s => s.StartDate))
                    {
                        <tr>
                            <td>@subscription.OwnerName</td>
                            <td>@subscription.PlanName</td>
                            <td>@subscription.StartDate.ToString("yyyy-MM-dd")</td>
                            <td>@subscription.EndDate.ToString("yyyy-MM-dd")</td>
                            <td>
                                @if (subscription.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </td>
                            <td>
                                @if (subscription.IsActive)
                                {
                                    <form asp-action="DeactivateSubscription" method="post" style="display:inline;"
                                          data-confirm="Deactivate this subscription now?"
                                          data-confirm-title="Deactivate subscription"
                                          data-confirm-btn="Deactivate">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@subscription.Id" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger">Deactivate</button>
                                    </form>
                                }
                                else
                                {
                                    <span class="text-muted">â€”</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">No subscriptions found.</div>
    }
</div>


