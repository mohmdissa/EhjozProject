@model EhjozProject.Web.ViewModels.Admin.UserManagementViewModel
@{
    ViewData["Title"] = "Users Management";
}

<div class="admin-shell">
    <div class="admin-topbar">
        <div>
            <h1 class="admin-title">Users</h1>
            <p class="admin-subtitle">View all customer users</p>
        </div>
        <a asp-action="Dashboard" class="btn btn-outline-secondary">Back</a>
    </div>

    @await Html.PartialAsync("_AdminNav")

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Users.Any())
    {
        <div class="admin-card card">
            <div class="card-header">All Users</div>
            <div class="card-body p-0">
            <table class="table admin-table table-hover mb-0">
                <thead>
                    <tr>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>City</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.Users)
                    {
                        <tr>
                            <td>@user.FullName</td>
                            <td>@user.Email</td>
                            <td>@user.PhoneNumber</td>
                            <td>@user.City</td>
                            <td>
                                @if (user.IsLocked)
                                {
                                    <span class="badge bg-danger">Deactivated</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                            </td>
                            <td>
                                <form asp-action="ToggleUserLock" method="post" style="display:inline;">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@user.Id" />
                                    <button type="submit" class="btn btn-sm @(user.IsLocked ? "btn-success" : "btn-outline-danger")">
                                        @(user.IsLocked ? "Activate" : "Deactivate")
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">No users found.</div>
    }
</div>


