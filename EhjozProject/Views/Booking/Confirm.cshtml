@model EhjozProject.Web.ViewModels.Booking.BookingViewModel
@{
    ViewData["Title"] = "Confirm Booking";
}

<div class="confirm-page">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="confirm-card">
                <div class="confirm-header">
                    <div class="confirm-icon">
                        <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                            <line x1="16" y1="2" x2="16" y2="6"></line>
                            <line x1="8" y1="2" x2="8" y2="6"></line>
                            <line x1="3" y1="10" x2="21" y2="10"></line>
                            <path d="m9 16 2 2 4-4"></path>
                        </svg>
                    </div>
                    <h1>Confirm Your Booking</h1>
                    <p>Please review your booking details before confirming</p>
                </div>

                <div class="booking-details">
                    <h3>Booking Details</h3>

                    <div class="detail-row">
                        <div class="detail-label">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <circle cx="12" cy="12" r="10"></circle>
                                <line x1="2" y1="12" x2="22" y2="12"></line>
                            </svg>
                            Stadium
                        </div>
                        <div class="detail-value">@Model.StadiumName</div>
                    </div>

                    <div class="detail-row">
                        <div class="detail-label">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                                <line x1="16" y1="2" x2="16" y2="6"></line>
                                <line x1="8" y1="2" x2="8" y2="6"></line>
                                <line x1="3" y1="10" x2="21" y2="10"></line>
                            </svg>
                            Date
                        </div>
                        <div class="detail-value">@Model.BookingDate.ToString("dddd, MMMM dd, yyyy")</div>
                    </div>

                    <div class="detail-row">
                        <div class="detail-label">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <circle cx="12" cy="12" r="10"></circle>
                                <polyline points="12 6 12 12 16 14"></polyline>
                            </svg>
                            Time
                        </div>
                        <div class="detail-value">@Model.StartTime - @Model.EndTime</div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <div class="detail-row">
                            <div class="detail-label">
                                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                                    <polyline points="14 2 14 8 20 8"></polyline>
                                    <line x1="16" y1="13" x2="8" y2="13"></line>
                                    <line x1="16" y1="17" x2="8" y2="17"></line>
                                </svg>
                                Notes
                            </div>
                            <div class="detail-value">@Model.Notes</div>
                        </div>
                    }
                </div>

                <div class="price-summary">
                    <h3>Price Summary</h3>

                    <div class="price-row">
                        <span>Stadium rental (1 hour)</span>
                        <span>$@Model.TotalPrice</span>
                    </div>
                    <div class="price-row">
                        <span>Service fee</span>
                        <span>$0.00</span>
                    </div>
                    <hr>
                    <div class="price-row total">
                        <span>Total Amount</span>
                        <span>$@Model.TotalPrice</span>
                    </div>
                </div>

                <form asp-controller="Booking" asp-action="ProcessBooking" method="post">
                    <input type="hidden" asp-for="StadiumId" />
                    <input type="hidden" asp-for="TimeSlotId" />
                    <input type="hidden" asp-for="BookingDate" />
                    <input type="hidden" asp-for="TotalPrice" />
                    <input type="hidden" asp-for="Notes" />

                    <div class="terms-check">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="agreeTerms" required>
                            <label class="form-check-label" for="agreeTerms">
                                I agree to the <a href="#">Terms and Conditions</a> and <a href="#">Cancellation Policy</a>
                            </label>
                        </div>
                    </div>

                    <div class="action-buttons">
                        <a asp-controller="Booking" asp-action="Create" asp-route-stadiumId="@Model.StadiumId" class="btn btn-outline-secondary">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M19 12H5M12 19l-7-7 7-7" />
                            </svg>
                            Back
                        </a>
                        <button type="submit" class="btn btn-success btn-confirm">
                            Confirm & Pay
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                                <polyline points="22 4 12 14.01 9 11.01"></polyline>
                            </svg>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .confirm-page {
            padding: 2rem 0 3rem;
        }

        .confirm-card {
            background: white;
            border-radius: 16px;
            padding: 2.5rem;
            box-shadow: 0 2px 12px rgba(0,0,0,0.08);
        }

        .confirm-header {
            text-align: center;
            margin-bottom: 2rem;
        }

        .confirm-icon {
            width: 80px;
            height: 80px;
            background: #e8f5e9;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1rem;
        }

            .confirm-icon svg {
                color: #1a5d2b;
            }

        .confirm-header h1 {
            font-size: 1.75rem;
            font-weight: 700;
            color: #1a5d2b;
            margin-bottom: 0.5rem;
        }

        .confirm-header p {
            color: #666;
        }

        .booking-details, .price-summary {
            background: #f8f9fa;
            padding: 1.5rem;
            border-radius: 12px;
            margin-bottom: 1.5rem;
        }

            .booking-details h3, .price-summary h3 {
                font-size: 1.1rem;
                font-weight: 600;
                color: #333;
                margin-bottom: 1rem;
            }

        .detail-row {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0.75rem 0;
            border-bottom: 1px solid #e9ecef;
        }

            .detail-row:last-child {
                border-bottom: none;
            }

        .detail-label {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            color: #666;
        }

            .detail-label svg {
                color: #1a5d2b;
            }

        .detail-value {
            font-weight: 600;
            color: #333;
        }

        .price-row {
            display: flex;
            justify-content: space-between;
            padding: 0.5rem 0;
            color: #666;
        }

            .price-row.total {
                font-size: 1.25rem;
                font-weight: 700;
                color: #1a5d2b;
            }

        .terms-check {
            margin-bottom: 1.5rem;
        }

            .terms-check a {
                color: #1a5d2b;
            }

        .action-buttons {
            display: flex;
            gap: 1rem;
        }

            .action-buttons .btn {
                flex: 1;
                padding: 1rem;
                display: flex;
                align-items: center;
                justify-content: center;
                gap: 0.5rem;
                font-weight: 600;
            }

        .btn-confirm {
            background: linear-gradient(135deg, #1a5d2b 0%, #2e7d42 100%);
            border: none;
        }

            .btn-confirm:hover {
                background: linear-gradient(135deg, #134620 0%, #1a5d2b 100%);
            }
    </style>
}
