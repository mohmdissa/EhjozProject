@model IEnumerable<EhjozProject.Domain.Models.Stadium.Stadium>
@{
    ViewData["Title"] = "My Stadiums";
}

<div class="my-stadiums-page">
    <!-- Page Header -->
    <div class="page-header">
        <div>
            <h1>My Stadiums</h1>
            <p>Manage all your registered stadiums</p>
        </div>
        <a asp-action="AddStadium" class="btn btn-success">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <line x1="12" y1="5" x2="12" y2="19"></line>
                <line x1="5" y1="12" x2="19" y2="12"></line>
            </svg>
            Add New Stadium
        </a>
    </div>

    <!-- Success Message -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Stadiums List -->
    @if (Model != null && Model.Any())
    {
        <div class="stadiums-table-container">
            <table class="table stadiums-table">
                <thead>
                    <tr>
                        <th>Stadium</th>
                        <th>Location</th>
                        <th>Price/Hour</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var stadium in Model)
                    {
                        <tr>
                            <td>
                                <div class="stadium-cell">
                                    <img src="@(stadium.ImageUrl ?? "https://images.unsplash.com/photo-1574629810360-7efbbe195018?ixlib=rb-4.0.3&auto=format&fit=crop&w=100&q=80")" alt="@stadium.Name">
                                    <div>
                                        <strong>@stadium.Name</strong>
                                        @if (!string.IsNullOrEmpty(stadium.Description))
                                        {
                                            <small>@(stadium.Description.Length > 50 ? stadium.Description.Substring(0, 50) + "..." : stadium.Description)</small>
                                        }
                                    </div>
                                </div>
                            </td>
                            <td>
                                <span class="location">
                                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                                        <circle cx="12" cy="10" r="3"></circle>
                                    </svg>
                                    @stadium.City
                                </span>
                            </td>
                            <td>
                                <span class="price">$@stadium.PricePerHour</span>
                            </td>
                            <td>
                                @if (stadium.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Inactive</span>
                                }
                            </td>
                            <td>
                                <div class="action-buttons">
                                    <a asp-action="TimeSlots" asp-route-stadiumId="@stadium.Id" class="btn btn-sm btn-outline-info" title="Time Slots">
                                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <circle cx="12" cy="12" r="10"></circle>
                                            <polyline points="12 6 12 12 16 14"></polyline>
                                        </svg>
                                    </a>

                                    <a asp-action="EditStadium" asp-route-id="@stadium.Id" class="btn btn-sm btn-outline-primary" title="Edit">
                                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                                            <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                                        </svg>
                                    </a>

                                    <form asp-action="ToggleStatus" asp-route-id="@stadium.Id" method="post" style="display:inline;">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-outline-warning" title="@(stadium.IsActive ? "Deactivate" : "Activate")">
                                            @if (stadium.IsActive)
                                            {
                                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                    <circle cx="12" cy="12" r="10"></circle>
                                                    <line x1="4.93" y1="4.93" x2="19.07" y2="19.07"></line>
                                                </svg>
                                            }
                                            else
                                            {
                                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                    <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                                                    <polyline points="22 4 12 14.01 9 11.01"></polyline>
                                                </svg>
                                            }
                                        </button>
                                    </form>

                                    <form asp-action="DeleteStadium" asp-route-id="@stadium.Id" method="post" style="display:inline;"
                                          data-confirm="Delete this stadium? This cannot be undone."
                                          data-confirm-title="Delete stadium"
                                          data-confirm-btn="Delete">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete">
                                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                <polyline points="3 6 5 6 21 6"></polyline>
                                                <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                                            </svg>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="empty-state">
            <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <circle cx="12" cy="12" r="10"></circle>
                <line x1="12" y1="8" x2="12" y2="16"></line>
                <line x1="8" y1="12" x2="16" y2="12"></line>
            </svg>
            <h3>No Stadiums Yet</h3>
            <p>You haven't added any stadiums. Start by adding your first one!</p>
            <a asp-action="AddStadium" class="btn btn-success">Add Your First Stadium</a>
        </div>
    }

    <!-- Back to Dashboard -->
    <div class="mt-4">
        <a asp-action="Dashboard" class="btn btn-outline-secondary">
            ← Back to Dashboard
        </a>
    </div>
</div>

@section Styles {
    <style>
        .my-stadiums-page {
            padding: 1.5rem 0;
        }

        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
            flex-wrap: wrap;
            gap: 1rem;
        }

            .page-header h1 {
                color: #1a5d2b;
                font-size: 1.75rem;
                font-weight: 700;
                margin-bottom: 0.25rem;
            }

            .page-header p {
                color: #666;
                margin: 0;
            }

        .btn-success {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .stadiums-table-container {
            background: white;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.08);
            overflow: hidden;
        }

        .stadiums-table {
            margin: 0;
        }

            .stadiums-table thead {
                background: #f8f9fa;
            }

            .stadiums-table th {
                font-weight: 600;
                color: #333;
                padding: 1rem;
                border-bottom: 2px solid #e9ecef;
            }

            .stadiums-table td {
                padding: 1rem;
                vertical-align: middle;
            }

        .stadium-cell {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

            .stadium-cell img {
                width: 60px;
                height: 60px;
                border-radius: 8px;
                object-fit: cover;
            }

            .stadium-cell strong {
                display: block;
                color: #333;
            }

            .stadium-cell small {
                color: #666;
            }

        .location {
            display: flex;
            align-items: center;
            gap: 0.25rem;
            color: #666;
        }

        .price {
            font-weight: 600;
            color: #1a5d2b;
        }

        .action-buttons {
            display: flex;
            gap: 0.5rem;
        }

            .action-buttons .btn {
                padding: 0.375rem 0.5rem;
            }

        .empty-state {
            text-align: center;
            padding: 4rem 2rem;
            background: white;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        }

            .empty-state svg {
                color: #ccc;
                margin-bottom: 1rem;
            }

            .empty-state h3 {
                color: #333;
                margin-bottom: 0.5rem;
            }

            .empty-state p {
                color: #666;
                margin-bottom: 1.5rem;
            }
    </style>
}
