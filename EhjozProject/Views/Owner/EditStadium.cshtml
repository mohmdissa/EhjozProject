@model EhjozProject.Web.ViewModels.Owner.StadiumViewModel
@{
    ViewData["Title"] = "Edit Stadium";
}

<div class="edit-stadium-page">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Page Header -->
            <div class="page-header">
                <h1>Edit Stadium</h1>
                <p>Update your stadium information</p>
            </div>

            <div class="form-card">
                <form asp-action="EditStadium" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <!-- Basic Information -->
                    <div class="form-section">
                        <h5>
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <circle cx="12" cy="12" r="10"></circle>
                                <line x1="2" y1="12" x2="22" y2="12"></line>
                            </svg>
                            Basic Information
                        </h5>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Location -->
                    <div class="form-section">
                        <h5>
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                                <circle cx="12" cy="10" r="3"></circle>
                            </svg>
                            Location
                        </h5>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="City" class="form-label"></label>
                                <select asp-for="City" class="form-select">
                                    <option value="">Select City</option>
                                    <option value="Beirut">Beirut</option>
                                    <option value="Tripoli">Tripoli</option>
                                    <option value="Sidon">Sidon</option>
                                    <option value="Jounieh">Jounieh</option>
                                    <option value="Zahle">Zahle</option>
                                    <option value="Byblos">Byblos</option>
                                    <option value="Baalbek">Baalbek</option>
                                    <option value="Tyre">Tyre</option>
                                </select>
                                <span asp-validation-for="City" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Address" class="form-label"></label>
                                <input asp-for="Address" class="form-control" />
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Pricing -->
                    <div class="form-section">
                        <h5>
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <line x1="12" y1="1" x2="12" y2="23"></line>
                                <path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path>
                            </svg>
                            Pricing
                        </h5>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="PricePerHour" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="PricePerHour" class="form-control" />
                                </div>
                                <span asp-validation-for="PricePerHour" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Image -->
                    <div class="form-section">
                        <h5>
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                                <circle cx="8.5" cy="8.5" r="1.5"></circle>
                                <polyline points="21 15 16 10 5 21"></polyline>
                            </svg>
                            Stadium Image
                        </h5>

                        <div class="mb-3">
                            <label asp-for="ImageUrl" class="form-label"></label>
                            <input asp-for="ImageUrl" class="form-control" />
                            <small class="text-muted">Enter a URL to an image of your stadium</small>
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        </div>

                        <!-- Current Image Preview -->
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <div class="current-image">
                                <p class="text-muted mb-2">Current Image:</p>
                                <img src="@Model.ImageUrl" alt="Current stadium image">
                            </div>
                        }
                    </div>

                    <!-- Status -->
                    <div class="form-section">
                        <h5>
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                                <polyline points="22 4 12 14.01 9 11.01"></polyline>
                            </svg>
                            Status
                        </h5>

                        <div class="form-check form-switch">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox">
                            <label asp-for="IsActive" class="form-check-label">Stadium is active and visible to customers</label>
                        </div>
                    </div>

                    <!-- Submit Buttons -->
                    <div class="form-actions">
                        <a asp-action="MyStadiums" class="btn btn-outline-secondary">Cancel</a>
                        <button type="submit" class="btn btn-success">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M19 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11l5 5v11a2 2 0 0 1-2 2z"></path>
                                <polyline points="17 21 17 13 7 13 7 21"></polyline>
                                <polyline points="7 3 7 8 15 8"></polyline>
                            </svg>
                            Update Stadium
                        </button>
                    </div>
                </form>
            </div>

            <!-- Danger Zone -->
            <div class="danger-zone">
                <h5>Danger Zone</h5>
                <p>Once you delete a stadium, there is no going back. Please be certain.</p>
                <form asp-action="DeleteStadium" asp-route-id="@Model.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this stadium? This action cannot be undone.');">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polyline points="3 6 5 6 21 6"></polyline>
                            <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                        </svg>
                        Delete Stadium
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .edit-stadium-page {
            padding: 1.5rem 0;
        }

        .page-header {
            margin-bottom: 2rem;
        }

            .page-header h1 {
                color: #1a5d2b;
                font-size: 1.75rem;
                font-weight: 700;
                margin-bottom: 0.25rem;
            }

            .page-header p {
                color: #666;
                margin: 0;
            }

        .form-card {
            background: white;
            border-radius: 16px;
            padding: 2rem;
            box-shadow: 0 2px 12px rgba(0,0,0,0.08);
        }

        .form-section {
            background: #f8f9fa;
            padding: 1.5rem;
            border-radius: 12px;
            margin-bottom: 1.5rem;
        }

            .form-section h5 {
                display: flex;
                align-items: center;
                gap: 0.5rem;
                color: #1a5d2b;
                font-weight: 600;
                margin-bottom: 1rem;
                padding-bottom: 0.75rem;
                border-bottom: 2px solid #e8f5e9;
            }

                .form-section h5 svg {
                    stroke: #1a5d2b;
                }

        .form-label {
            font-weight: 500;
            color: #333;
        }

        .form-control, .form-select {
            padding: 0.75rem 1rem;
            border-radius: 8px;
            border: 1px solid #ddd;
        }

            .form-control:focus, .form-select:focus {
                border-color: #1a5d2b;
                box-shadow: 0 0 0 3px rgba(26, 93, 43, 0.1);
            }

        .current-image {
            margin-top: 1rem;
        }

            .current-image img {
                max-width: 300px;
                border-radius: 12px;
            }

        .form-actions {
            display: flex;
            justify-content: flex-end;
            gap: 1rem;
            padding-top: 1rem;
            border-top: 1px solid #eee;
        }

            .form-actions .btn {
                display: flex;
                align-items: center;
                gap: 0.5rem;
                padding: 0.75rem 1.5rem;
            }

        .form-check-input:checked {
            background-color: #1a5d2b;
            border-color: #1a5d2b;
        }

        .danger-zone {
            background: #fff5f5;
            border: 1px solid #fed7d7;
            border-radius: 12px;
            padding: 1.5rem;
            margin-top: 2rem;
        }

            .danger-zone h5 {
                color: #c53030;
                font-weight: 600;
                margin-bottom: 0.5rem;
            }

            .danger-zone p {
                color: #666;
                margin-bottom: 1rem;
            }

            .danger-zone .btn-danger {
                display: flex;
                align-items: center;
                gap: 0.5rem;
            }
    </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
