@model EhjozProject.Domain.Models.Stadium.Stadium
@{
    ViewData["Title"] = Model.Name;
}

<div class="stadium-details-page">
    <!-- Back Button -->
    <div class="back-nav">
        <a asp-controller="Stadium" asp-action="Index" class="btn-back">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M19 12H5M12 19l-7-7 7-7" />
            </svg>
            Back to Stadiums
        </a>
    </div>

    <div class="row">
        <!-- Stadium Info Column -->
        <div class="col-lg-8">
            <!-- Stadium Image -->
            <div class="stadium-image-container">
                <img src="@(Model.ImageUrl ?? "https://images.unsplash.com/photo-1574629810360-7efbbe195018?ixlib=rb-4.0.3&auto=format&fit=crop&w=1200&q=80")" alt="@Model.Name" class="stadium-main-image">
                @if (Model.IsActive)
                {
                    <span class="availability-badge available">Available for Booking</span>
                }
                else
                {
                    <span class="availability-badge unavailable">Currently Unavailable</span>
                }
            </div>

            <!-- Stadium Details -->
            <div class="stadium-details-card">
                <h1 class="stadium-title">@Model.Name</h1>

                <div class="stadium-location">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                        <circle cx="12" cy="10" r="3"></circle>
                    </svg>
                    <span>@Model.Address, @Model.City</span>
                </div>

                <div class="stadium-price-tag">
                    <span class="price">$@Model.PricePerHour</span>
                    <span class="period">per hour</span>
                </div>

                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <div class="stadium-description">
                        <h3>About This Stadium</h3>
                        <p>@Model.Description</p>
                    </div>
                }

                <!-- Features -->
                <div class="stadium-features">
                    <h3>Features</h3>
                    <div class="features-grid">
                        <div class="feature-item">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <circle cx="12" cy="12" r="10"></circle>
                                <path d="M12 2C12 2 14.5 5.5 14.5 12C14.5 18.5 12 22 12 22"></path>
                                <line x1="2" y1="12" x2="22" y2="12"></line>
                            </svg>
                            <span>Football Field</span>
                        </div>
                        <div class="feature-item">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M18 8h1a4 4 0 0 1 0 8h-1"></path>
                                <path d="M2 8h16v9a4 4 0 0 1-4 4H6a4 4 0 0 1-4-4V8z"></path>
                                <line x1="6" y1="1" x2="6" y2="4"></line>
                                <line x1="10" y1="1" x2="10" y2="4"></line>
                                <line x1="14" y1="1" x2="14" y2="4"></line>
                            </svg>
                            <span>Refreshments</span>
                        </div>
                        <div class="feature-item">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <rect x="1" y="3" width="15" height="13"></rect>
                                <polygon points="16 8 20 8 23 11 23 16 16 16 16 8"></polygon>
                                <circle cx="5.5" cy="18.5" r="2.5"></circle>
                                <circle cx="18.5" cy="18.5" r="2.5"></circle>
                            </svg>
                            <span>Parking Available</span>
                        </div>
                        <div class="feature-item">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M4 15s1-1 4-1 5 2 8 2 4-1 4-1V3s-1 1-4 1-5-2-8-2-4 1-4 1z"></path>
                                <line x1="4" y1="22" x2="4" y2="15"></line>
                            </svg>
                            <span>Night Lights</span>
                        </div>
                    </div>
                </div>

                <!-- Owner Info -->
                @if (Model.Owner != null)
                {
                    <div class="owner-info">
                        <h3>Stadium Owner</h3>
                        <div class="owner-card">
                            <div class="owner-avatar">
                                <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                                    <circle cx="12" cy="7" r="4"></circle>
                                </svg>
                            </div>
                            <div class="owner-details">
                                <strong>@(Model.Owner.FullName ?? Model.Owner.Email)</strong>
                                @if (!string.IsNullOrEmpty(Model.Owner.PhoneNumber))
                                {
                                    <span>@Model.Owner.PhoneNumber</span>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Booking Column -->
        <div class="col-lg-4">
            <div class="booking-card">
                <h3>Book This Stadium</h3>

                @if (User.Identity?.IsAuthenticated == true)
                {
                    @if (Model.IsActive)
                    {
                        <form asp-controller="Booking" asp-action="Create" method="get">
                            <input type="hidden" name="stadiumId" value="@Model.Id" />

                            <div class="mb-3">
                                <label class="form-label">Select Date</label>
                                <input type="date" name="date" class="form-control"
                                       min="@DateTime.Now.ToString("yyyy-MM-dd")"
                                       value="@DateTime.Now.ToString("yyyy-MM-dd")" required />
                            </div>

                            <div class="booking-summary">
                                <div class="summary-row">
                                    <span>Price per hour</span>
                                    <span>$@Model.PricePerHour</span>
                                </div>
                            </div>

                            <button type="submit" class="btn btn-success btn-book-now">
                                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                                    <line x1="16" y1="2" x2="16" y2="6"></line>
                                    <line x1="8" y1="2" x2="8" y2="6"></line>
                                    <line x1="3" y1="10" x2="21" y2="10"></line>
                                </svg>
                                Check Availability
                            </button>
                        </form>
                    }
                    else
                    {
                        <div class="unavailable-message">
                            <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <circle cx="12" cy="12" r="10"></circle>
                                <line x1="4.93" y1="4.93" x2="19.07" y2="19.07"></line>
                            </svg>
                            <p>This stadium is currently unavailable for booking.</p>
                        </div>
                    }
                }
                else
                {
                    <div class="login-prompt">
                        <p>Please login to book this stadium</p>
                        <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-success w-100">
                            Login to Book
                        </a>
                        <p class="mt-3">Don't have an account? <a asp-area="Identity" asp-page="/Account/Register">Register</a></p>
                    </div>
                }
            </div>

            <!-- Quick Info Card -->
            <div class="quick-info-card">
                <h4>Quick Info</h4>
                <ul>
                    <li>
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <circle cx="12" cy="12" r="10"></circle>
                            <polyline points="12 6 12 12 16 14"></polyline>
                        </svg>
                        Booking available 24/7
                    </li>
                    <li>
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                            <polyline points="22 4 12 14.01 9 11.01"></polyline>
                        </svg>
                        Instant confirmation
                    </li>
                    <li>
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <rect x="1" y="4" width="22" height="16" rx="2" ry="2"></rect>
                            <line x1="1" y1="10" x2="23" y2="10"></line>
                        </svg>
                        Secure payment
                    </li>
                    <li>
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
                        </svg>
                        24/7 Support
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .stadium-details-page {
            padding: 1rem 0 3rem;
        }

        .back-nav {
            margin-bottom: 1.5rem;
        }

        .btn-back {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            color: #666;
            text-decoration: none;
            font-weight: 500;
            transition: color 0.3s;
        }

            .btn-back:hover {
                color: #1a5d2b;
            }

        /* Stadium Image */
        .stadium-image-container {
            position: relative;
            border-radius: 16px;
            overflow: hidden;
            margin-bottom: 1.5rem;
        }

        .stadium-main-image {
            width: 100%;
            height: 400px;
            object-fit: cover;
        }

        .availability-badge {
            position: absolute;
            top: 20px;
            left: 20px;
            padding: 0.5rem 1rem;
            border-radius: 25px;
            font-weight: 600;
            font-size: 0.9rem;
        }

            .availability-badge.available {
                background: #4caf50;
                color: white;
            }

            .availability-badge.unavailable {
                background: #f44336;
                color: white;
            }

        /* Stadium Details Card */
        .stadium-details-card {
            background: white;
            border-radius: 16px;
            padding: 2rem;
            box-shadow: 0 2px 12px rgba(0,0,0,0.08);
        }

        .stadium-title {
            font-size: 2rem;
            font-weight: 700;
            color: #1a5d2b;
            margin-bottom: 1rem;
        }

        .stadium-location {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            color: #666;
            margin-bottom: 1rem;
        }

        .stadium-price-tag {
            background: #e8f5e9;
            padding: 1rem 1.5rem;
            border-radius: 12px;
            display: inline-block;
            margin-bottom: 1.5rem;
        }

            .stadium-price-tag .price {
                font-size: 1.75rem;
                font-weight: 700;
                color: #1a5d2b;
            }

            .stadium-price-tag .period {
                color: #666;
                margin-left: 0.25rem;
            }

        .stadium-description {
            margin-bottom: 1.5rem;
        }

            .stadium-description h3,
            .stadium-features h3,
            .owner-info h3 {
                font-size: 1.1rem;
                font-weight: 600;
                color: #333;
                margin-bottom: 1rem;
            }

            .stadium-description p {
                color: #666;
                line-height: 1.7;
            }

        /* Features */
        .features-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 1rem;
        }

        .feature-item {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            padding: 0.75rem;
            background: #f8f9fa;
            border-radius: 8px;
        }

            .feature-item svg {
                color: #1a5d2b;
            }

            .feature-item span {
                color: #333;
                font-weight: 500;
            }

        /* Owner Info */
        .owner-info {
            margin-top: 1.5rem;
            padding-top: 1.5rem;
            border-top: 1px solid #eee;
        }

        .owner-card {
            display: flex;
            align-items: center;
            gap: 1rem;
            padding: 1rem;
            background: #f8f9fa;
            border-radius: 12px;
        }

        .owner-avatar {
            width: 56px;
            height: 56px;
            background: #e8f5e9;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .owner-avatar svg {
                color: #1a5d2b;
            }

        .owner-details {
            display: flex;
            flex-direction: column;
        }

            .owner-details strong {
                color: #333;
            }

            .owner-details span {
                color: #666;
                font-size: 0.9rem;
            }

        /* Booking Card */
        .booking-card {
            background: white;
            border-radius: 16px;
            padding: 1.5rem;
            box-shadow: 0 2px 12px rgba(0,0,0,0.08);
            position: sticky;
            top: 20px;
            margin-bottom: 1.5rem;
        }

            .booking-card h3 {
                font-size: 1.25rem;
                font-weight: 600;
                color: #333;
                margin-bottom: 1.5rem;
            }

        .booking-summary {
            background: #f8f9fa;
            padding: 1rem;
            border-radius: 8px;
            margin-bottom: 1rem;
        }

        .summary-row {
            display: flex;
            justify-content: space-between;
            color: #333;
        }

        .btn-book-now {
            width: 100%;
            padding: 1rem;
            font-weight: 600;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
        }

        .unavailable-message {
            text-align: center;
            padding: 2rem;
            color: #666;
        }

            .unavailable-message svg {
                color: #f44336;
                margin-bottom: 1rem;
            }

        .login-prompt {
            text-align: center;
        }

            .login-prompt p {
                color: #666;
                margin-bottom: 1rem;
            }

        /* Quick Info Card */
        .quick-info-card {
            background: white;
            border-radius: 16px;
            padding: 1.5rem;
            box-shadow: 0 2px 12px rgba(0,0,0,0.08);
        }

            .quick-info-card h4 {
                font-size: 1rem;
                font-weight: 600;
                color: #333;
                margin-bottom: 1rem;
            }

            .quick-info-card ul {
                list-style: none;
                padding: 0;
                margin: 0;
            }

            .quick-info-card li {
                display: flex;
                align-items: center;
                gap: 0.75rem;
                padding: 0.75rem 0;
                color: #666;
                border-bottom: 1px solid #f0f0f0;
            }

                .quick-info-card li:last-child {
                    border-bottom: none;
                }

                .quick-info-card li svg {
                    color: #1a5d2b;
                }

        @@media (max-width: 991px) {
            .stadium-main-image {
                height: 250px;
            }

            .features-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
}
