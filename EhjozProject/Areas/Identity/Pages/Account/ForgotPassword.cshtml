@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot Password";
}

<div class="auth-page">
    <div class="auth-card">

        <!-- HEADER -->
        <div class="auth-header">
            <h2>Forgot Password</h2>
            <p>Enter your email to reset your password</p>
        </div>

        <!-- FORM -->
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <!-- EMAIL -->
            <div class="mb-3">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email"
                       class="form-control"
                       placeholder="email@example.com" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <!-- SUBMIT -->
            <button type="submit" class="btn btn-main w-100 mb-3">
                Send Reset Link
            </button>

            <!-- BACK TO LOGIN -->
            <div class="auth-switch">
                Remember your password?
                <a asp-page="./Login">Login</a>
            </div>
        </form>
    </div>
</div>

<style>
    /* ===== SHARED AUTH STYLE ===== */

    .auth-page {
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        background: linear-gradient(135deg,#f8faf8,#e8f5e9);
    }

    .auth-card {
        background: #fff;
        padding: 2.5rem;
        max-width: 420px;
        width: 100%;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0,0,0,.1);
    }

    .auth-header {
        text-align: center;
        margin-bottom: 2rem;
    }

    .auth-icon {
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg,#1a5d2b,#2e7d42);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1rem;
    }

    .logo-img {
        width: 48px;
        filter: brightness(0) invert(1);
    }

    /* ===== BUTTON FIX (NO BLACK HOVER) ===== */

    .btn-main {
        background: linear-gradient(135deg,#1a5d2b,#2e7d42);
        color: #fff;
        border: none;
        font-weight: 600;
        transition: background 0.2s ease, transform 0.15s ease;
    }

        .btn-main:hover,
        .btn-main:focus,
        .btn-main:active {
            background: linear-gradient(135deg,#1a5d2b,#2e7d42); /* SAME COLOR */
            color: #fff;
            transform: translateY(-1px);
            box-shadow: none;
            outline: none;
        }

    .auth-switch {
        margin-top: 1.5rem;
        text-align: center;
    }

        .auth-switch a {
            color: #1a5d2b;
            font-weight: 600;
            text-decoration: none;
        }

            .auth-switch a:hover {
                text-decoration: underline;
            }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
