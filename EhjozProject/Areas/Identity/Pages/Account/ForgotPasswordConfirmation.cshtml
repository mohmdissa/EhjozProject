@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Password Reset Sent";
}

<div class="auth-page">
    <div class="auth-card">

        <!-- HEADER -->
        <div class="auth-header">
            <h2>Password Reset Sent</h2>
            <p>
                We’ve sent you an email with instructions to reset your password.
                <br />
                Please check your inbox.
            </p>

            <!-- LOGO AFTER TEXT -->
            <img src="~/images/footballogo2.png" class="logo-img-no-circle" />
        </div>

        <!-- ACTION -->
        <div class="auth-switch">
            <a asp-page="./Login">Back to Login</a>
        </div>

    </div>
</div>

<style>
    /* ===== AUTH BASE ===== */

    .auth-page {
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        background: linear-gradient(135deg,#f8faf8,#e8f5e9);
    }

    .auth-card {
        background: #fff;
        padding: 2.5rem;
        max-width: 420px;
        width: 100%;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0,0,0,.1);
        text-align: center;
    }

    .auth-header h2 {
        color: #1a5d2b;
        font-weight: 700;
        margin-bottom: .5rem;
    }

    .auth-header p {
        color: #666;
        margin-bottom: 1.5rem;
    }

    /* LOGO */
    .logo-img-no-circle {
        width: 70px;
        margin-top: .5rem;
    }

    /* LINK */
    .auth-switch a {
        color: #1a5d2b;
        font-weight: 600;
        text-decoration: none;
    }

        .auth-switch a:hover {
            text-decoration: underline;
        }
</style>
