@page
@model EhjozProject.Web.Areas.Identity.Pages.Account.LockoutModel
@{
    ViewData["Title"] = "Account Deactivated";
}

<div class="container py-5" style="max-width: 720px;">
    <div class="card shadow-sm border-0">
        <div class="card-body p-4 p-md-5">
            <h1 class="h4 fw-bold mb-2" style="color:#1a5d2b;">Account Deactivated</h1>
            <p class="text-muted mb-4">
                Your account has been deactivated. If you believe this is a mistake, please contact support to restore access.
            </p>

            <div class="alert alert-warning">
                <strong>Need help?</strong><br />
                Email: <a href="mailto:support@ehjoz.com">support@ehjoz.com</a>
            </div>

            <div class="d-flex gap-2">
                <a asp-page="./Login" class="btn btn-success">Back to Login</a>
                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">Home</a>
            </div>
        </div>
    </div>
</div>


